# Compiler
CC = gcc

# Source files
SRC = $(wildcard *.c)

# Object files
OBJ = $(SRC:%.c=%.o)

# Executable name
NAME = school

# Default rule to build the executable
all: $(NAME)

# Rule to build the executable
$(NAME): $(OBJ)
	$(CC) -o $@ $^

# Rule to compile .c files into .o files
%.o: %.c
	$(CC) -c -o $@ $<

# Clean rule to remove generated files
clean:
	rm -f $(OBJ) $(NAME)
